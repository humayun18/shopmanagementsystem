<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shopmanagement">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/online_store"
        android:label="@string/app_name"
        android:roundIcon="@drawable/online_store"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UpdateActivity"></activity>
        <activity android:name=".ViewActivity" />
        <activity android:name=".AddActivity" />
        <activity android:name=".OthersActivity" />
        <activity android:name=".OptionActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginPageActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>